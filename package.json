{
  "name": "@lz-asia/lz-kit",
  "version": "0.5.1",
  "description": "LayerZero Kit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/lz-asia/lz-kit.git",
  "author": "LevX <team@levx.io>",
  "license": "MIT",
  "bin": {
    "lz-kit": "dist/cli/index.js"
  },
  "exports": {
    "./hardhat": "./dist/hardhat.js",
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "src"
  ],
  "scripts": {
    "prepare": "husky install && shx chmod +x .husky/pre-commit",
    "clear": "rm -rf dist",
    "build": "tsc",
    "test": "jest",
    "prepublish": "yarn clear && yarn build && chmod 755 dist/cli/index.js"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write"
    ],
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-plugin-jest": "^27.2.0",
    "hardhat": "^2.14.0",
    "hardhat-deploy": "^0.11.29",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.1.0",
    "shx": "^0.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "commander": "^10.0.1",
    "ethers": "^5.7.2",
    "loading-cli": "^1.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
